type
  TFrmDiagram = class(TForm)
    Chart1: TChart;
    Series1: TPieSeries;
    procedure FormActivate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
   procedure MassDiagramm;
  end;

var
  FrmDiagram: TFrmDiagram;

